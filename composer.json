{
  "name": "capybash/magicslider",
  "description": "Configurable image slider replacing the WelcomeHero on the forum home page.",
  "type": "flarum-extension",
  "keywords": ["flarum", "flarum-extension", "slider", "banner", "hero", "image", "magic"],
  "license": "MIT",
  "homepage": "https://github.com/capybash/magicslider",
  "support": {
    "issues": "https://github.com/capybash/magicslider/issues",
    "source": "https://github.com/capybash/magicslider",
    "forum": "https://discuss.flarum.org/?q=author%3Acapybash%20tag%3Aextensions"
  },
  "authors": [
    {
      "name": "capybash",
      "role": "Developer",
      "homepage": "https://github.com/capybash"
    }
  ],
  "require": {
    "php": ">=8.2",
    "flarum/core": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Capybash\\MagicSlider\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-2.x": "2.x-dev"
    },
    "flarum-extension": {
      "title": "Magic Slider",
      "category": "feature",
      "icon": {
        "name": "fas fa-hand-sparkles",
        "backgroundColor": "#6A5ACD",
        "color": "#ffffff"
      }
    }
  },
  "config": {
    "sort-packages": true
  }
}